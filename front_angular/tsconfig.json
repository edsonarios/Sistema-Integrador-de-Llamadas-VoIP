{
	"compileOnSave": true,
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"@models/*": ["models/*"],
			"@operador/*": ["app/components/pages/operador/*"],
			"@services/*": ["services/*"]
		},
		"module": "commonjs",
		"preserveConstEnums": true,
		"outDir": "./dist/out-tsc",
		"sourceMap": false,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"target": "es5",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2017", "dom"]
	},

	"include": [
		"src/**/*.ts",
		"src/app/components/**/*.ts",
		"src/app/components/pages/operador/**/*.ts",
		"src/services/**/*.ts",
		"src/models/**/*.ts"
	],
	"exclude": ["node_modules"]
}
