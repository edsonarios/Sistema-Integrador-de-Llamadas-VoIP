{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@models/*": ["models/*"],
      "@operador/*": ["app/components/pages/operador/*"],
      "@administrador/*": ["app/components/pages/administrador/*"],
      "@services/*": ["services/*"]
    },
    "module": "es2020",
    "preserveConstEnums": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es5",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "importHelpers": true,
    "lib": ["es2018", "dom"]
  },

  "include": [
    "src/**/*.ts",
    "src/app/components/**/*.ts",
    "src/app/components/pages/operador/**/*.ts",
    "src/services/**/*.ts",
    "src/models/**/*.ts"
  ],
  "exclude": ["node_modules"]
}